@model IEnumerable<Score>

@{
    ViewData["Title"] = "Score";
}
<h2 class="title h2">@ViewData["Title"]</h2>
@* <a asp-controller="Score" asp-action="Grading" class="btn btn-primary mb-2">
    Grading for students
</a> *@
<form>
    <table id="TableShowScore" class="table table-responsive-md table-striped table-bordered table-hover">
        <thead class="table-active">
            <tr>
                <th>Student Name</th>
                <th>Subject</th>
                <th>Mark</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Student.Name</td>
                        <td>@item.Subject.Name</td>
                        <td>@item.Mark</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a data-id="@item.Id"
                                   class="btn btn-danger delete-score">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6">No Student found.</td>
                </tr>
            }
        </tbody>
    </table>
</form>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('.delete-score').click(function (e) {
            e.preventDefault();
            var scoreId = $(this).data('id'); // Lấy giá trị từ data-id
            if (confirm('Are you sure you want to delete this score?')) {
                $.ajax({
                    url: '@Url.Action("Delete", "Score")',
                    type: 'POST',
                    data: {
                        Id: scoreId // Sửa thành studentId
                    },
                    success: function (data) {
                        var message = 'Delete successfully'; // Sửa thành var message
                        console.log(message); // Sửa thành message
                        //Reload page after successful update (optional)
                        location.reload();
                    },
                    error: function () {
                        alert('Error deleting student. Please try again later.');
                    }
                });
            }
        });
    });
</script>


<script>
    var deleteSuccessMessage = '@TempData["DeleteSuccess"]';
    if (deleteSuccessMessage) {
        alert(deleteSuccessMessage);
    }
</script>

