@model Student_Management.Models.Course
@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="AddCourse" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfStudent" class="control-label">Number Of Students</label>
                <input asp-for="NumberOfStudent" class="form-control" />
                <span asp-validation-for="NumberOfStudent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDay" class="control-label">Start Day</label>
                <input asp-for="StartDay" class="form-control" type="date" />
                <span asp-validation-for="StartDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDay" class="control-label">End Day</label>
                <input asp-for="EndDay" class="form-control" type="date" />
                <span asp-validation-for="EndDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubjectId" class="control-label">Subjects</label>
                <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.Subjects">
                    <option value="">-- Choose a subject --</option>
                </select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>




            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-2" />
            </div>
        </form>
    </div>
</div>
