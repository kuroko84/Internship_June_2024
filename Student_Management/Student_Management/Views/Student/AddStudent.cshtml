@model Student
@{
    ViewData["Title"] = "Create Student";
}

<h1>@ViewData["Title"]</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="AddStudent" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
             
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label">Date Of Birth</label>
                <input asp-for="DateOfBirth" class="form-control" type="date" />

            </div>
            <div class="form-group">
                <label asp-for="ClassOfStudentId" class="control-label">Choose class for new student</label>
                <select asp-for="ClassOfStudentId" class="form-control" asp-items="ViewBag.ClassOfStudents">
                    <option value="">-- Choose a class --</option>
                </select>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-2" />
            </div>
        </form>
    </div>
</div>
<script>
    var invalid = '@TempData["InvalidData"]';
    if (invalid) {
        alert(invalid);
    }
</script>
