@model IEnumerable<ClassOfStudent>

@{
    ViewData["Title"] = "Class of student";
}
<h2 class="title h2">@ViewData["Title"]</h2>

<a asp-controller="ClassOfStudent" asp-action="AddNewClassOfStudent" class="btn btn-primary mb-2">
    Add A Class For Students
</a>

<table id="TableShowStudents" class="table table-responsive-md table-striped table-bordered table-hover">
    <thead class="table-active">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>School year</th>
            <th>Number Of Student</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description.</td>
                    <td>@item.SchoolYear</td>
                    <td>@item.Students.Count()</td>
                    <td>
                        <div class="btn-group btn-group-sm ">
                            <a asp-controller="ClassOfStudent"
                               asp-action="ViewMoreStudentInClass"
                               asp-route-Id="@item.Id"
                               class="btn btn-primary">
                                View More
                            </a>
                        </div>
                    </td>

                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">No Student found.</td>
            </tr>
        }
    </tbody>
</table>